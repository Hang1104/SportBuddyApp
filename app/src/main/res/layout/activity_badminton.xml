<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Badminton">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="WebViewLayout">

        <!-- Description for Video 1 -->
        <TextView
            android:id="@+id/description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Rules of Badminton : How To PLAY Badminton : Badminton Rules For Beginners EXPLAINED"
            android:textColor="#000000"
            android:textSize="20sp" />


        <WebView
            android:id="@+id/webView1"
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_below="@id/description1"
            tools:ignore="WebViewLayout" />


        <TextView
            android:id="@+id/description2"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/webView1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="Common Beginner Badminton Mistakes - Do And Donts"
            android:textColor="#000000"
            android:textSize="20sp" />

        <WebView
            android:id="@+id/webView2"
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_below="@id/description2" />

        <!-- Description for Video 3 -->
        <TextView
            android:id="@+id/description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/webView2"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="Badminton Tips and Tricks : How to Play Badminton Like a Pro : Badminton Game Strategies"
            android:textColor="#000000"
            android:textSize="20sp" />

        <!-- WebView for Video 3 -->
        <WebView
            android:id="@+id/webView3"
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_below="@id/description3"
            tools:ignore="WebViewLayout" />

    </RelativeLayout>
</ScrollView>
