<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sportLabel"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Sport: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sportLabel"
        android:padding="8dp"
        android:text="Selected Sport"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/skillLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sportLabel"
        android:padding="8dp"
        android:text="Skill Level: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/skillLevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sportText"
        android:layout_toRightOf="@id/skillLevelLabel"
        android:padding="8dp"
        android:text="Selected Skill Level"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/editIcon"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@id/skillLevelText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/edit" />

</RelativeLayout>
