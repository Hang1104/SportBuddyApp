<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Basketball">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="WebViewLayout">

        <!-- WebView for Video 1 -->


        <!-- Description for Video 1 -->
        <TextView
            android:id="@+id/description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <WebView
            android:id="@+id/webView1"
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_below="@id/description1"
             />
        <!-- WebView for Video 2 -->


        <!-- Description for Video 2 -->
        <TextView
            android:id="@+id/description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/webView1"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <WebView
            android:id="@+id/webView2"
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_below="@id/description2"
            />
        <!-- WebView for Video 3 -->


        <!-- Description for Video 3 -->
        <TextView
            android:id="@+id/description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/webView2"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <WebView
        android:id="@+id/webView3"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_below="@id/description3" />
    </RelativeLayout>
</ScrollView>
